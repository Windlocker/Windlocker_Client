<Page x:Class="WPFTest.Pages.UploadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFTest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="UploadPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="183*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="FileListBox" Grid.Column="1" Background="{x:Null}" PreviewDragEnter="FileListBox_PreviewDragEnter" Grid.ColumnSpan="3" AllowDrop="True" SelectionMode="Extended"/>
        <Button x:Name="btnFile" Grid.Column="2" Content="파일 선택" Grid.Row="1" Background="{x:Null}" Foreground="black" BorderBrush="#FF039BE5" Click="btnFile_Click" />
        <StackPanel Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Margin="0,51,0,50">
            <Label Content="인증번호 확인" HorizontalAlignment="Center" FontFamily="NanumBarunGothic"></Label>
            <TextBox Height="28" TextWrapping="Wrap" Text="" HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="#FF039BE5" Foreground="#FF039BE5" FontFamily="NanumBarunGothic" Padding="0,5,0,0"/>
            <Button Content="업로드" Margin="0,10,0,0 " Background="{x:Null}" Foreground="black" BorderBrush="#FF039BE5"/>
        </StackPanel>
        <Button x:Name="btnClear" Content="초기화" Grid.Row="1" Background="{x:Null}" Foreground="black" BorderBrush="#FF039BE5"  Grid.Column="1" />
        <Button x:Name="btnRemove" Grid.Column="3" Content="파일 선택" Grid.Row="1" Background="{x:Null}" Foreground="black" BorderBrush="#FF039BE5" Click="btnFile_Click" />
    </Grid>
</Page>
